---
import JobCard from './JobCard.astro';

interface Job {
  title: string;
  company: string;
  companyUrl: string;
  level: string;
  locationType: string;
  location: string;
  url: string;
  postedDate: string;
  tags: string[];
}

interface Props {
  jobs: Job[];
  /** Add data attributes for filtering (jobs page) */
  filterable?: boolean;
  /** Max stagger delay in ms */
  maxDelay?: number;
  /** Delay step per item in ms */
  delayStep?: number;
  id?: string;
}

const { jobs, filterable = false, maxDelay = 150, delayStep = 20, id } = Astro.props;
---

<div
  class="bg-white dark:bg-surface-card rounded-3xl shadow-soft overflow-hidden"
  id={id}
  role="list"
  aria-label="Job listings"
>
  {jobs.map((job, i) => (
    <div
      role="listitem"
      class:list={["reveal job-row border-b border-slate-100 dark:border-slate-700/30", filterable && "job-item"]}
      data-delay={String(Math.min(i * delayStep, maxDelay))}
      {...(filterable ? {
        "data-level": job.level,
        "data-location-type": job.locationType,
        "data-location": job.location,
        "data-search": `${job.title} ${job.company} ${job.location} ${job.tags.join(' ')}`.toLowerCase(),
      } : {})}
    >
      <JobCard {...job} />
    </div>
  ))}
</div>
