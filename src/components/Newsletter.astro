<section id="newsletter" class="bg-sapphire-500 rounded-3xl p-10 md:p-14 text-center text-white">
  <h2 class="text-2xl md:text-3xl font-bold mb-3">Stay in the loop</h2>
  <p class="text-sapphire-100 mb-8 max-w-md mx-auto text-base">
    Monthly curated healthcare UX articles, resources, and job highlights. No spam.
  </p>
  <form
    action="https://buttondown.com/api/emails/embed-subscribe/designwithcare"
    method="post"
    target="popupwindow"
    class="flex flex-col sm:flex-row gap-3 max-w-md mx-auto"
  >
    <input
      type="email"
      name="email"
      placeholder="you@example.com"
      required
      class="flex-1 px-4 py-3 rounded-full text-gray-900 bg-white placeholder-gray-400 text-sm focus:outline-none focus:ring-2 focus:ring-white/50"
    />
    <button
      type="submit"
      class="px-6 py-3 bg-white text-sapphire-500 font-semibold text-sm rounded-full hover:bg-creme-100 transition-colors shrink-0"
    >
      Subscribe
    </button>
  </form>
</section>
